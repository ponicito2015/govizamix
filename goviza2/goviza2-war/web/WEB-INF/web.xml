<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>redmond</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsf</welcome-file>
    </welcome-file-list>
    <ejb-local-ref>
        <ejb-ref-name>MateriaPrimaFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>bc.MateriaPrimaFacadeLocal</local>
        <ejb-link>sistema-ejb.jar#MateriaPrimaFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>FormulacionFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>bc.FormulacionFacadeLocal</local>
        <ejb-link>sistema-ejb.jar#FormulacionFacade</ejb-link>
    </ejb-local-ref>
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/index.jsf</location>
    </error-page>
    <ejb-local-ref>
        <ejb-ref-name>ConductorFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>bc.ConductorFacadeLocal</local>
        <ejb-link>sistema-ejb.jar#ConductorFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>IgvFacturaFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>bc.IgvFacturaFacadeLocal</local>
        <ejb-link>sistema-ejb.jar#IgvFacturaFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>EstadoProductoCostoAlmacenFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>bc.EstadoProductoCostoAlmacenFacadeLocal</local>
        <ejb-link>sistema-ejb.jar#EstadoProductoCostoAlmacenFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>ContratoFumigacionFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>bc.ContratoFumigacionFacadeLocal</local>
        <ejb-link>sistema-ejb.jar#ContratoFumigacionFacade</ejb-link>
    </ejb-local-ref>
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    <ejb-local-ref>
        <ejb-ref-name>ZonaCiudadFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>bc.ZonaCiudadFacadeLocal</local>
        <ejb-link>sistema-ejb.jar#ZonaCiudadFacade</ejb-link>
    </ejb-local-ref>
</web-app>
